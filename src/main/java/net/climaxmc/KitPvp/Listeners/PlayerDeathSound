package net.climaxmc.KitPvp.Listeners;

import net.climaxmc.ClimaxPvp;

import org.bukkit.Bukkit;
import org.bukkit.GameMode;
import org.bukkit.Location;
import org.bukkit.Sound;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.block.BlockPlaceEvent;
import org.bukkit.event.entity.PlayerDeathEvent;

public class PlayerDeathSound implements Listener {
	private ClimaxPvp plugin;

	public PlayerDeathSound(ClimaxPvp plugin) {
		this.plugin = plugin;
	}

	@EventHandler
	public void onDeaths(PlayerDeathEvent event) {
		Location location = event.getEntity().getLocation();
		String playername = event.getEntity().getName();
		Bukkit.getPlayer(playername).getWorld().playSound(location, Sound.BLAZE_DEATH, 1, 0);

	}
}
